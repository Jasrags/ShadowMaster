# Run knip check before pushing
# This is non-blocking but will show warnings
pnpm knip --max-issues 100 || echo "⚠️  Knip found issues. Run 'pnpm knip' to see details or 'pnpm knip:fix' to auto-fix."

# Validate CLAUDE.md is up to date (warning only)
pnpm validate-docs || echo "⚠️  CLAUDE.md may be out of date. Run 'pnpm validate-docs' to see details."
