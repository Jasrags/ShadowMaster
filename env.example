# ShadowMaster Docker Deployment Configuration
# Copy this file to .env and update the values

# Image Configuration
IMAGE_NAME=shadowmaster
VERSION=0.1.0

# Server Configuration
PORT=8080

# Security
# IMPORTANT: Change this to a secure random string in production!
SESSION_SECRET=change-me-in-production

# Restart Policy
# Options: no, always, on-failure, unless-stopped
RESTART_POLICY=unless-stopped

# Resource Limits (optional, leave empty to disable)
# CPU limits (e.g., "0.5" for half a CPU, "1" for one CPU)
CPU_LIMIT=
MEMORY_LIMIT=
CPU_RESERVATION=
MEMORY_RESERVATION=

# Build-time variables (optional, used during docker build)
BUILD_TIME=
GIT_COMMIT=

# Watchtower Configuration (optional)
# Enable automatic container updates
WATCHTOWER_RESTART_POLICY=unless-stopped
# Clean up old images after update (true/false)
WATCHTOWER_CLEANUP=true
# Include stopped containers in updates (true/false)
WATCHTOWER_INCLUDE_STOPPED=false
# Revive stopped containers if new image available (true/false)
WATCHTOWER_REVIVE_STOPPED=false
# Use label-based filtering (true/false)
WATCHTOWER_LABEL_ENABLE=true
# Cron schedule for updates (default: daily at 4 AM UTC)
# Format: "0 0 4 * * *" (minute hour day month weekday)
WATCHTOWER_SCHEDULE=0 0 4 * * *
# Poll interval in seconds (leave empty to use schedule, set for polling mode)
WATCHTOWER_POLL_INTERVAL=
# Watchtower resource limits
WATCHTOWER_CPU_LIMIT=0.1
WATCHTOWER_MEMORY_LIMIT=64m

