{
  "name": "shadow-master",
  "version": "0.1.0",
  "packageManager": "pnpm@10.26.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm type-check:watch\" \"pnpm lint:watch\"",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm type-check:watch\" \"pnpm lint:watch\" \"pnpm knip:watch\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:watch": "nodemon --watch . --ext ts,tsx --ignore .next --ignore node_modules --ignore .git --ignore dist --ignore build --exec \"pnpm lint\"",
    "type-check": "tsc --noEmit --incremental false",
    "type-check:watch": "tsc --noEmit --watch --incremental false",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check": "pnpm lint && pnpm type-check && pnpm knip",
    "check:ci": "pnpm format:check && pnpm lint && pnpm type-check && pnpm test:ci && pnpm knip:ci",
    "knip": "knip",
    "knip:report": "knip",
    "knip:production": "knip --production",
    "knip:fix": "knip --fix",
    "knip:watch": "knip --watch",
    "knip:ci": "knip --max-issues 0",
    "verify-data": "pnpm dlx tsx scripts/verify-data.ts",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "backup": "pnpm dlx tsx scripts/backup.ts",
    "health-check": "pnpm dlx tsx scripts/health-check.ts",
    "seed-data": "pnpm dlx tsx scripts/seed-data.ts",
    "user-admin": "pnpm dlx tsx scripts/user-admin.ts",
    "validate-docs": "pnpm dlx tsx scripts/validate-claude-md.ts",
    "check-tests": "pnpm dlx tsx scripts/check-test-coverage.ts",
    "check-tests:all": "pnpm dlx tsx scripts/check-test-coverage.ts --all",
    "check-tests:strict": "pnpm dlx tsx scripts/check-test-coverage.ts --strict",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.18",
    "bcryptjs": "^3.0.3",
    "lucide-react": "^0.561.0",
    "next": "16.0.7",
    "react": "19.2.0",
    "react-aria-components": "^1.13.0",
    "react-dom": "19.2.0",
    "server-only": "^0.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@knip/mcp": "^0.0.9",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@modelcontextprotocol/server-filesystem": "^2025.12.18",
    "@modelcontextprotocol/server-memory": "^2025.11.25",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.12.18",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "husky": "^9.0.0",
    "jsdom": "^27.3.0",
    "knip": "^5.77.1",
    "lint-staged": "^15.0.0",
    "next-devtools-mcp": "^0.3.7",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}
