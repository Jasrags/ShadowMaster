{
  "name": "shadow-master",
  "version": "0.1.0",
  "packageManager": "pnpm@10.26.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm type-check:watch\" \"pnpm lint:watch\"",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm type-check:watch\" \"pnpm lint:watch\" \"pnpm knip:watch\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:watch": "nodemon --watch . --ext ts,tsx --ignore .next --ignore node_modules --ignore .git --ignore dist --ignore build --exec \"pnpm lint\"",
    "type-check": "tsc --noEmit --incremental false",
    "type-check:watch": "tsc --noEmit --watch --incremental false",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check": "pnpm lint && pnpm type-check && pnpm knip",
    "check:ci": "pnpm format:check && pnpm lint && pnpm type-check && pnpm test:ci && pnpm knip:ci",
    "knip": "knip",
    "knip:report": "knip",
    "knip:production": "knip --production",
    "knip:fix": "knip --fix",
    "knip:watch": "knip --watch",
    "knip:ci": "knip --max-issues 0",
    "verify-data": "pnpm dlx tsx scripts/verify-data.ts",
    "verify-naming": "pnpm dlx tsx scripts/verify-naming-conventions.ts",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "backup": "pnpm dlx tsx scripts/backup.ts",
    "health-check": "pnpm dlx tsx scripts/health-check.ts",
    "seed-data": "pnpm dlx tsx scripts/seed-data.ts",
    "user-admin": "pnpm dlx tsx scripts/user-admin.ts",
    "validate-docs": "pnpm dlx tsx scripts/validate-claude-md.ts",
    "check-tests": "pnpm dlx tsx scripts/check-test-coverage.ts",
    "check-tests:all": "pnpm dlx tsx scripts/check-test-coverage.ts --all",
    "check-tests:strict": "pnpm dlx tsx scripts/check-test-coverage.ts --strict",
    "validate-characters": "pnpm dlx tsx scripts/validate-example-characters.ts",
    "validate-creation-docs": "pnpm dlx tsx scripts/validate-creation-docs.ts",
    "generate-diagrams": "pnpm dlx tsx scripts/generate-component-diagrams.ts",
    "audit:creation": "pnpm dlx tsx scripts/audit/creation-ux-audit.ts",
    "audit:creation:strict": "pnpm dlx tsx scripts/audit/creation-ux-audit.ts --strict",
    "audit:creation:verbose": "pnpm dlx tsx scripts/audit/creation-ux-audit.ts --verbose",
    "audit:creation:report": "pnpm dlx tsx scripts/audit/creation-ux-audit.ts --output=markdown",
    "docker:build": "GIT_SHA=$(git rev-parse --short HEAD) docker compose build",
    "docker:build:fresh": "GIT_SHA=$(git rev-parse --short HEAD) docker compose build --no-cache",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:dev": "GIT_SHA=$(git rev-parse --short HEAD) docker compose up --build -d",
    "docker:logs": "docker compose logs -f",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@react-email/components": "^1.0.6",
    "@sentry/nextjs": "^10.38.0",
    "@tanstack/react-virtual": "^3.13.18",
    "bcryptjs": "^3.0.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "nodemailer": "^7.0.13",
    "pino": "^10.3.0",
    "react": "19.2.4",
    "react-aria-components": "^1.14.0",
    "react-dom": "19.2.4",
    "resend": "^6.9.1",
    "server-only": "^0.0.1",
    "tw-animate-css": "^1.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@knip/mcp": "^0.0.18",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@modelcontextprotocol/server-filesystem": "^2026.1.14",
    "@modelcontextprotocol/server-memory": "^2026.1.26",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.12.18",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.0.0",
    "jsdom": "^27.3.0",
    "knip": "^5.83.0",
    "lint-staged": "^16.2.7",
    "next-devtools-mcp": "^0.3.10",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "@modelcontextprotocol/sdk@<1.25.2": ">=1.25.2",
      "next@>=16.0.0-beta.0 <16.0.9": ">=16.0.9",
      "qs@<6.14.1": ">=6.14.1"
    }
  }
}
