{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "next-devtools": {
      "type": "stdio",
      "command": "node",
      "args": ["./node_modules/next-devtools-mcp/dist/index.js"]
    },
    "filesystem": {
      "type": "stdio",
      "command": "node",
      "args": [
        "./node_modules/@modelcontextprotocol/server-filesystem/dist/index.js",
        "."
      ]
    },
    "git": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "."]
    },
    "memory": {
      "type": "stdio",
      "command": "node",
      "args": [
        "./node_modules/@modelcontextprotocol/server-memory/dist/index.js"
      ]
    },
    "sequentialthinking": {
      "type": "stdio",
      "command": "node",
      "args": [
        "./node_modules/@modelcontextprotocol/server-sequential-thinking/dist/index.js"
      ]
    },
    "time": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-time"]
    },
    "spec-lint": {
      "type": "stdio",
      "command": "node",
      "args": ["./tools/spec-lint-mcp.mjs"]
    },
    "knip": {
      "type": "stdio",
      "command": "node",
      "args": ["./node_modules/@knip/mcp/src/cli.js"]
    }
  }
}
